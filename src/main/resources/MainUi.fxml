<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" minHeight="680" minWidth="800" xmlns="http://javafx.com/javafx/8.0.131"
            fx:controller="com.phpmail.controller.MainController">
    <left>
        <VBox fx:id="vBoxContainer" alignment="TOP_CENTER" prefHeight="549.0" prefWidth="248.0" spacing="5.0">
            <TextField fx:id="txtFieldEmailTo" promptText="Email To...">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="20.0"/>
                </VBox.margin>
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </padding>
            </TextField>
            <TextField fx:id="txtFieldEmailSubject" promptText="Email Subject...">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </TextField>
            <TextField fx:id="txtFieldLogoUrl" promptText="Company Logo URL...">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </TextField>
            <TextField fx:id="txtFieldHomePage" promptText="Company Home Page URL...">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </TextField>
            <TextField fx:id="txtFieldGreetings" promptText="Greetings text...">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </TextField>
            <TextField fx:id="txtFieldFromText" promptText="From text...">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </TextField>
            <TextField fx:id="txtFieldSuccessUrl" promptText="On Success Redirect URL...">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </TextField>
            <TextField fx:id="txtFieldFailureUrl" promptText="On Failure Redirect URL...">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </TextField>
            <TextField fx:id="txtFieldSelectTemplate" onAction="#selectTemplate" promptText="Select template...">
                <VBox.margin>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                </VBox.margin>
            </TextField>
            <Button fx:id="btnClear" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#clearClicked"
                    text="Clear" textAlignment="CENTER">
                <VBox.margin>
                    <Insets top="20.0"/>
                </VBox.margin>
                <padding>
                    <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
                </padding>
            </Button>
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
        </VBox>
    </left>
    <center>
        <VBox>
            <TableView fx:id="tableFields" editable="true" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="tableColDisplayName" text="Display Name"/>
                    <TableColumn fx:id="tableColFormFieldName" text="Form Field Name"/>
                </columns>
                <VBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="20.0"/>
                </VBox.margin>
            </TableView>
            <HBox spacing="15.0" VBox.vgrow="NEVER">
                <TextField fx:id="txtFieldDisplayName" prefHeight="30.0" prefWidth="184.0" promptText="Display Name..."
                           HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </TextField>
                <TextField fx:id="txtFieldFormFieldName" prefHeight="30.0" prefWidth="184.0"
                           promptText="Form Field Name..." HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                </TextField>
                <Button fx:id="btnAddField" alignment="TOP_CENTER" maxWidth="-Infinity" minWidth="-Infinity"
                        mnemonicParsing="false" onAction="#addField" prefWidth="75.0" text="Add" textAlignment="CENTER"
                        HBox.hgrow="ALWAYS">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0"/>
                    </padding>
                </Button>
                <BorderPane.margin>
                    <Insets left="275.0"/>
                </BorderPane.margin>
                <VBox.margin>
                    <Insets bottom="15.0" left="10.0" right="10.0" top="5.0"/>
                </VBox.margin>
            </HBox>
        </VBox>
    </center>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <Menu mnemonicParsing="false" text="_File">
                <Menu text="_New">
                    <items>
                        <MenuItem fx:id="menuItemNewMailCode" onAction="#clearClicked" text="New Mail Code">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="N" control="DOWN" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="menuItemNewTemplate" mnemonicParsing="false" onAction="#createNewTemplate"
                                  text="New Template">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="T" control="DOWN" meta="UP" shift="UP"
                                                    shortcut="UP"/>
                            </accelerator>
                        </MenuItem>
                    </items>
                </Menu>
                <MenuItem fx:id="menuItemGeneratePhp" onAction="#generatePhpCode" text="_Generate PHP">
                    <accelerator>
                        <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP"/>
                    </accelerator>
                </MenuItem>
                <MenuItem fx:id="menuItemClose" mnemonicParsing="false" onAction="#closeClicked" text="Close">
                    <accelerator>
                        <KeyCodeCombination alt="DOWN" code="F4" control="UP" meta="UP" shift="UP" shortcut="UP"/>
                    </accelerator>
                </MenuItem>
            </Menu>
            <Menu mnemonicParsing="false" text="_Help">
                <MenuItem fx:id="menuItemAbout" onAction="#aboutClicked" text="_About"/>
            </Menu>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </padding>
        </MenuBar>
    </top>
</BorderPane>
